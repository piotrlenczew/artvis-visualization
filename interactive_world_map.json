{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "An interactive world map supporting pan and zoom.",
  "width": 900,
  "height": 500,
  "autosize": "none",
  "signals": [
    {"name": "tx", "update": "width / 2"},
    {"name": "ty", "update": "height / 2"},
    {
      "name": "scale",
      "value": 150,
      "on": [
        {
          "events": {"type": "wheel", "consume": true},
          "update": "clamp(scale * pow(1.0005, -event.deltaY * pow(16, event.deltaMode)), 150, 3000)"
        }
      ]
    },
    {
      "name": "angles",
      "value": [0, 0],
      "on": [{"events": "pointerdown", "update": "[rotateX, centerY]"}]
    },
    {
      "name": "cloned",
      "value": null,
      "on": [{"events": "pointerdown", "update": "copy('projection')"}]
    },
    {
      "name": "start",
      "value": null,
      "on": [{"events": "pointerdown", "update": "invert(cloned, xy())"}]
    },
    {
      "name": "drag",
      "value": null,
      "on": [
        {
          "events": "[pointerdown, window:pointerup] > window:pointermove",
          "update": "invert(cloned, xy())"
        }
      ]
    },
    {
      "name": "delta",
      "value": null,
      "on": [
        {
          "events": {"signal": "drag"},
          "update": "[drag[0] - start[0], start[1] - drag[1]]"
        }
      ]
    },
    {
      "name": "rotateX",
      "value": 0,
      "on": [{"events": {"signal": "delta"}, "update": "angles[0] + delta[0]"}]
    },
    {
      "name": "centerY",
      "value": 0,
      "on": [
        {
          "events": {"signal": "delta"},
          "update": "clamp(angles[1] + delta[1], -70, 70)"
        }
      ]
    },
    {
      "name": "selectedYear",
      "value": 1902,
      "bind": {
        "input": "range",
        "min": 1902,
        "max": 1916,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "clickedCountry",
      "value": 4,
      "on": [
        {
          "events": "shape:click",
          "update": "datum.id"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "type": "EqualEarth",
      "scale": {"signal": "scale"},
      "rotate": [{"signal": "rotateX"}, 0, 0],
      "center": [0, {"signal": "centerY"}],
      "translate": [{"signal": "tx"}, {"signal": "ty"}]
    }
  ],
  "data": [
    {
      "name": "countries",
      "url": "https://vega.github.io/vega-datasets/data/world-110m.json",
      "format": {"type": "topojson", "feature": "countries"}
    },
    {
      "name": "exhibitions",
      "url": "./exhibitions_with_countries.csv",
      "format": {"type": "csv"}
    },
    {
      "name": "exhibitionsWithoutVenues",
      "source": "exhibitions",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["country_id", "country", "startdate", "title", "city", "title", "type"]
        }
      ]
    },
    {
      "name": "countryYearExhibitionCounts",
      "source": "exhibitionsWithoutVenues",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["country_id", "country", "startdate", "title"]
        },
        {
          "type": "aggregate",
          "groupby": ["country_id", "country", "startdate"],
          "fields": ["exhibition_count"],
          "ops": ["count"],
          "as": ["exhibition_count"]
        }
      ]
    },
    {
      "name": "maxExhibitionCount",
      "source": "countryYearExhibitionCounts",
      "transform": [
        {
          "type": "extent",
          "field": "exhibition_count",
          "signal": "maxExhibitionExtent"
        }
      ]
    },
    {
      "name": "filteredByYearCountryExhibitionCounts",
      "source": "countryYearExhibitionCounts",
      "transform": [
        {
          "type": "filter",
          "expr": "datum.startdate && datum.startdate == selectedYear"
        }
      ]
    },
    {
      "name": "countries_with_data",
      "source": "countries",
      "transform": [
        {
          "type": "lookup",
          "from": "filteredByYearCountryExhibitionCounts",
          "key": "country_id",
          "fields": ["id"],
          "as": ["exhibition_data"]
        },
        {
          "type": "formula",
          "as": "exhibition_count",
          "expr": "datum.exhibition_data ? datum.exhibition_data.exhibition_count : 0"
        }
      ]
    },
    {
      "name": "cityExhibitionCounts",
      "source": "exhibitionsWithoutVenues",
      "transform": [
        {
          "type": "filter",
          "expr": "datum.startdate && datum.startdate == selectedYear"
        },
        {
          "type": "filter",
          "expr": "datum.country_id == clickedCountry"
        },
        {
          "type": "aggregate",
          "groupby": ["city", "type"],
          "ops": ["count"],
          "as": ["exhibition_count"]
        },
        {
          "type": "stack",
          "groupby": ["city"],
          "field": "exhibition_count",
          "sort": {"field": "type"},
          "as": ["y0", "y1"]
        },
        {
          "type": "collect",
          "sort": {"field": "exhibition_count", "order": "descending"}
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "colorScale",
      "type": "linear",
      "domain": {"signal": "maxExhibitionExtent"},
      "range": ["#f7fbff", "#08306b"],
      "zero": true
    },
    {
      "name": "xscaleCountry",
      "type": "band",
      "domain": {"data": "cityExhibitionCounts", "field": "city"},
      "range": [0, 400],
      "padding": 0.1
    },
    {
      "name": "yscaleCountry",
      "type": "linear",
      "domain": {"data": "cityExhibitionCounts", "field": "exhibition_count"},
      "range": [200, 0],
      "nice": true
    },
    {
      "name": "colorTypeScale",
      "type": "ordinal",
      "domain": {"data": "cityExhibitionCounts", "field": "type"},
      "range": {"scheme": "category10"}
    }
  ],
  "marks": [
    {
      "type": "group",
      "encode": {
        "enter": {
          "x": {"value": 50}, 
          "y": {"value": 50}, 
          "width": {"value": 400}, 
          "height": {"value": 400}
        }
      },
      "marks": [
        {
          "type": "shape",
          "from": {"data": "countries_with_data"},
          "encode": {
            "enter": {
              "fill": {"scale": "colorScale", "field": "exhibition_count"},
              "stroke": {"value": "#ffffff"},
              "strokeWidth": {"value": 0.5}
            },
          "update": {"fill": {"scale": "colorScale", "field": "exhibition_count"}}
          },
          "transform": [{"type": "geoshape", "projection": "projection"}]
        }
      ]
    },
    {
      "type": "group",
      "encode": {
        "enter": {
          "x": {"value": 500},
          "y": {"value": 50},
          "width": {"value": 400},
          "height": {"value": 200}
        }
      },
      "marks": [
        {
          "type": "rect",
          "from": {"data": "cityExhibitionCounts"},
          "encode": {
            "enter": {
              "x": {"scale": "xscaleCountry", "field": "city"},
              "width": {"scale": "xscaleCountry", "band": 1},
              "y": {"scale": "yscaleCountry", "field": "y1"},
              "y2": {"scale": "yscaleCountry", "field": "y0"},
              "fill": {"scale": "colorTypeScale", "field": "type"}
            },
            "update": {
            "x": {"scale": "xscaleCountry", "field": "city"},
            "width": {"scale": "xscaleCountry", "band": 1},
            "y": {"scale": "yscaleCountry", "field": "y1"},
            "y2": {"scale": "yscaleCountry", "field": "y0"},
            "fillOpacity": {"value": 1}
          },
          "exit": {
            "fillOpacity": {"value": 1}
          }
          }
        },
        {
          "type": "text",
          "from": {"data": "cityExhibitionCounts"},
          "encode": {
            "enter": {
              "x": {
                "scale": "xscaleCountry",
                "field": "city",
                "band": 0.5
              },
              "y": {"scale": "yscaleCountry", "field": "exhibition_count", "offset": -5},
              "text": {"field": "exhibition_count"},
              "align": {"value": "center"},
              "baseline": {"value": "bottom"},
              "fill": {"value": "black"}
            },
            "update": {
              "x": {"scale": "xscaleCountry", "field": "city", "band": 0.5},
              "y": {"scale": "yscaleCountry", "field": "exhibition_count", "offset": -5},
              "text": {"field": "exhibition_count"},
              "fillOpacity": {"value": 1}
            },
            "exit": {
              "fillOpacity": {"value": 0}
            }
          }
        }
      ],
      "axes": [
        {
          "scale": "xscaleCountry",
          "orient": "bottom",
          "title": "City",
          "labelAngle": -45
        },
        {
          "scale": "yscaleCountry",
          "orient": "left",
          "title": "Exhibition Count"
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "colorScale",
      "title": "Exhibition Count",
      "orient": "none"
    },
    {
      "fill": "colorTypeScale",
      "title": "Exhibition Type",
      "orient": "none"
    }
  ],
  "config": {}
}